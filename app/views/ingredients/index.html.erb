<%= form_tag({controller: 'ingredients', action: 'index'}, {method: :get}) do %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search", name: "Search" %>
<% end %>

<% @results.each do |recipe| %>
  <li><%= link_to recipe.name, "/ingredients/#{recipe.id}" %></li>
<% end %>

