<% if user_signed_in? %>
  <h1>Your Recipes</h1>
<% else %>
  <h1>Available Recipes</h1>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Favorites' %><br />
  <%= link_to 'Add a new recipe', new_recipe_path %>
<% end %>
<br><br>


<%= form_tag(recipes_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search the Cookbook" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>


<ul>
  <% @recipes.each do |recipe| %>
    <li><%= link_to recipe.name, recipe %></li>
  <% end %>
</ul>

<%= link_to "Home", root_path %>
