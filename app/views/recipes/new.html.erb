<h1>Add a new Recipe</h1>

<%= form_for @recipe do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: "Recipe Name" %>

    <%= f.label :ingredients %><br />
    <%= f.text_area :ingredients, placeholder: "Ingredient List" %>

    <%= f.label :instructions %><br />
    <%= f.text_area :instructions, placeholder: "Instructions" %>

    <%= f.label :duration %><br />
    <%= f.text_field :duration, placeholder: "Total Time" %>

  <%= f.submit "Add recipe" %>
<% end %>
<br/>
<%= link_to "Home", root_path %><br/>
<%= link_to "Recipes List", recipes_path %>
