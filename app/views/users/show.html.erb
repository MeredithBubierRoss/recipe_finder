<div class="panel">
  <h5>Your profile, <%= @user.email %><br></h5>
  <% @recipes = Recipe.where(user: @user.id) %>
  <div class="user_recipes">
    <h3>
      Your personal recipe collection
    </h3>
    <ul>
      <% @recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe %> (<%= recipe.duration %>)</li>
      <% end %>
    </ul>
  </div>
</div>
